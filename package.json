{
    "name": "@istvan.xyz/webtest",
    "version": "0.1.2",
    "description": "Web test utility.",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc --declaration && cp ./src/report.html dist/ && rm -rf dist/tests",
        "prepare": "npm run build",
        "postversion": "git push --tags && git push",
        "lint": "eslint --ext ts,js --quiet ./src",
        "test": "jest ./src"
    },
    "browserslist": [
        "last 1 chrome version"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/istvan-xyz/webtest.git"
    },
    "keywords": [
        "web",
        "test",
        "browser",
        "e2e"
    ],
    "author": "Istv√°n Antal <istvan@antal.xyz>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/istvan-xyz/webtest/issues"
    },
    "homepage": "https://github.com/istvan-xyz/webtest#readme",
    "dependencies": {
        "mkdirp": "^1.0.3",
        "playwright": "^0.12.1",
        "rimraf": "^3.0.2"
    },
    "devDependencies": {
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/polyfill": "^7.8.7",
        "@babel/preset-env": "^7.9.0",
        "@babel/preset-typescript": "^7.9.0",
        "@types/debug": "^4.1.5",
        "@types/jest": "^25.1.4",
        "@types/mkdirp": "^1.0.0",
        "@types/node": "^12.12.31",
        "@types/rimraf": "^3.0.0",
        "@typescript-eslint/eslint-plugin": "^2.25.0",
        "@typescript-eslint/eslint-plugin-tslint": "^2.25.0",
        "@typescript-eslint/parser": "^2.25.0",
        "eslint": "^6.8.0",
        "eslint-config-airbnb-base": "^14.1.0",
        "eslint-plugin-import": "^2.20.1",
        "jest": "^25.2.0",
        "tslint": "^6.1.0",
        "typescript": "^3.8.3"
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "targets": {
                        "node": "current"
                    }
                }
            ],
            "@babel/preset-typescript"
        ],
        "plugins": [
            [
                "@babel/plugin-proposal-class-properties",
                {
                    "loose": false
                }
            ]
        ]
    },
    "jest": {
        "setupFiles": [
            "@babel/polyfill"
        ],
        "globalSetup": "./src/globalSetup.ts",
        "globalTeardown": "./src/globalTeardown.ts"
    }
}
