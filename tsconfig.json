{
    "compilerOptions": {
        "lib": ["es2015", "es2016", "es2017", "es2018", "esnext", "dom", "dom.iterable"],
        "module": "commonjs",
        "target": "es2016",
        "jsx": "react",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "types.ts",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}